{
  "name": "null_pointer",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --prefix apps/web",
    "build": "npm run build:all",
    "build:all": "npm run prisma:generate && npm run build:packages && npm run build:apps",
    "build:packages": "npm run build --workspace=@repo/db && npm run build --workspace=@repo/judge0-integration && npm run build --workspace=@repo/webhook-server && npm run build --workspace=@repo/boilerplate-generator",
    "build:apps": "npm run build --prefix apps/web",
    "start": "npm run start --prefix apps/web",
    "start:judge0": "npm run start --workspace=@repo/judge0-integration",
    "start:webhook": "npm run start --workspace=@repo/webhook-server",
    "prisma:generate": "prisma generate --schema=./packages/db/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./packages/db/prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=./packages/db/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./packages/db/prisma/schema.prisma",
    "lint": "npm run lint --prefix apps/web"
  },
  "devDependencies": {
    "prisma": "^6.17.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
